{
    "name": "ilviwyn-mail",
    "version": "0.0.0",
    "description": "A discord mod-mail bot that can be plugged in with functionalites with a pipeline.",
    "private": true,
    "keywords": [
        "bot",
        "modmail"
    ],
    "license": "MIT",
    "contributors": [
        "Lofty Brambles"
    ],
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "commit": "cty",
        "start": "cross-env DEV=true node ./dist/core/index.js",
        "deploy": "node ./dist/scripts/deploy.js",
        "dev": "rollup -c -w",
        "build": "rollup -c",
        "lint": "prettier -w . --cache",
        "lint-staged": "lint-staged",
        "feat": "changeset",
        "log": "changeset version && pnpm lint",
        "release": "pnpm build && changeset publish"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=7.9.5"
    },
    "packageManager": "pnpm@7.12.2+",
    "dependencies": {
        "@biscuitland/api-types": "^2.2.2",
        "@biscuitland/cache": "^2.2.2",
        "@biscuitland/core": "^2.2.2",
        "@biscuitland/helpers": "^2.2.2",
        "@biscuitland/rest": "^2.2.2",
        "dotenv": "^16.0.3",
        "pino": "^8.8.0",
        "pino-pretty": "^9.1.1"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@changesets/git": "^2.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@swc/core": "^1.3.24",
        "@types/node": "^18.11.17",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "cross-env": "^7.0.3",
        "cty": "^1.0.3",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "fast-glob": "^3.2.12",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "rollup": "^3.8.1",
        "rollup-plugin-swc3": "^0.8.0",
        "typescript": "^4.9.4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix --cache",
            "prettier -w --cache"
        ],
        "*.{md,json,toml,yml}": [
            "prettier -w --cache"
        ]
    }
}
